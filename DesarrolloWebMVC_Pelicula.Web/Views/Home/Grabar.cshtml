@model IEnumerable<DesarrolloWebMVC_Pelicula.Web.Models.Pelicula>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Grabar Registros</title>
</head>
<body>
    <div>
        <form method="post" action="/Home/Grabar">
            <h1>Registro de Peliculas</h1>
            <table>
                <tr>
                    <td>Código</td>
                    <td>
                        <input type="text" name="Codigo"
                    </td>
                </tr>
                <tr>
                    <td>Título</td>
                    <td>
                        <input type="text" name="Titulo"
                    </td>
                </tr>
                <tr>
                    <td>Director</td>
                    <td>
                        <input type="text" name="Director"
                    </td>
                </tr>
                <tr>
                    <td>Actor Principal</td>
                    <td>
                        <input type="text" name="ActorPrincipal"
                    </td>
                </tr>
                <tr>
                    <td>No. Actores</td>
                    <td>
                        <input type="text" name="numActores"
                    </td>
                </tr>
                <tr>
                    <td>Duración</td>
                    <td>
                        <input type="text" name="Duracion"
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2">Estreno</td>
                    <td>
                        <input type="text" name="Estreno"
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2"> </td>
                    <td>
                        <input type="submit" name="Confirmar"
                    </td>
                </tr>

            </table>
        </form>
        <br />
        @Html.ActionLink("Retornar Sin Registrar", "Index")
    </div>

</body>
</html>
