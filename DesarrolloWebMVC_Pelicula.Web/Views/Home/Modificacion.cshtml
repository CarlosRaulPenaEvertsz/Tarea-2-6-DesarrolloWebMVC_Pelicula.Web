@model DesarrolloWebMVC_Pelicula.Web.Models.Pelicula

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modificar Registros</title>
</head>
<body>
    <div>
        <form method="post" action="/Home/Modificacion">
            <h1>Modificar Peliculas</h1>
            <table>
                <tr>
                    <td>Código</td>
                    <td>
                        <input type="text" name="Codigo" value="@Model.Codigo"
                    </td>
                </tr>
                <tr>
                    <td>Título</td>
                    <td>
                        <input type="text" name="Titulo" value="@Model.Titulo"
                    </td>
                </tr>
                <tr>
                    <td>Director</td>
                    <td>
                        <input type="text" name="Director" value="@Model.Director"
                    </td>
                </tr>
                <tr>
                    <td>Actor Principal</td>
                    <td>
                        <input type="text" name="ActorPrincipal" value="@Model.ActorPrincipal"
                    </td>
                </tr>
                <tr>
                    <td>No. Actores</td>
                    <td>
                        <input type="text" name="numActores" value="@Model.numActores"
                    </td>
                </tr>
                <tr>
                    <td>Duración</td>
                    <td>
                        <input type="text" name="Duracion" value="@Model.Duracion"
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2">Estreno</td>
                    <td>
                        <input type="text" name="Estreno" value="@Model.Estreno"
                    </td>
                </tr>
                <tr>
                    <td class="auto-style2"> </td>
                    <td>
                        <input type="submit" name=" Registrar Cambios "
                    </td>
                </tr>

            </table>
        </form>
        <br />
        <a href="/">Retornar Sin Registrar</a>
    </div>
</body>
</html>
